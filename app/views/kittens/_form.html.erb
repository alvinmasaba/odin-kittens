<h1>Create Kitten</h1>

<section>
  <%= form_with model: kitten do |form| %>
    <oL>
      <div>
        <li>
          <%= form.label :name %>
          <%= form.text_field :name %>
          <%  kitten.errors.messages_for(:name).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </li>
      </div>

      <div>
        <li>
          <%= form.label :age %>
          <%= form.number_field :age %>
          <%  kitten.errors.messages_for(:age).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </li>
      </div>

      <div>
        <li>
          <%= form.label :cuteness %>
          <%= form.number_field :cuteness %>
          <%  kitten.errors.messages_for(:cuteness).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </li>
      </div>

      <div>
        <li>
          <%= form.label :softness %>
          <%= form.number_field :softness %>
          <%  kitten.errors.messages_for(:softness).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </li>
      </div>
    </oL>
    <%= form.submit %>
  <% end %>
</section>

<div><%= link_to "Go Back", root_path %></div>
